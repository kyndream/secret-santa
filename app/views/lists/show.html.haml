%p#notice= notice
%p
  %strong Name:
  = @list.name
%p
  %strong Description:
  = @list.description
%p
  %strong Price cap:
  = @list.price_cap

%ul
  = render @list.people.order("id")


- if @pool.count > 0
  = "There are #{@pool.count} #{'person'.pluralize(@pool.count)} left in this pool."
  = link_to "Pick Someone!", list_pick_random_person_path(@list)

  - unless !@picked_person
    %h4= "Congrats! You got #{@picked_person.name}. Remember, the price cap is at #{@list.price_cap}."
- else
  No one available in this pool.


= render 'people/new', list: @list

= link_to 'Edit', edit_list_path(@list)
|
\#{link_to 'Back', lists_path}
